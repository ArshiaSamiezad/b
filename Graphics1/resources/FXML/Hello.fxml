<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.HelloController"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@../CSS/style.css" styleClass="back-ground">
    <center>
        <VBox alignment="CENTER" maxWidth="200" spacing="5">
            <Label text="Username" styleClass="headers"/>
            <TextField fx:id="username" promptText="username" alignment="CENTER"/>
            <Label text="Password" id="red-text"/>
            <PasswordField fx:id="password" promptText="Password" alignment="CENTER"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Sign up" onMouseClicked="#signUp"/>
                <Button text="Reset" onMouseClicked="#reset"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
